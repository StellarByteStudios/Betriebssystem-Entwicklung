{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "qemu-gdb",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/loader/isofiles/boot/kernel.elf",
            "cwd": "${workspaceFolder}",
            "miDebuggerPath": "rust-gdb",
            "miDebuggerServerAddress": "localhost:1234",
            "stopAtEntry": false,
            "setupCommands": [
                {
                    "text": "-enable-pretty-printing"
                },
                {
                    "text": "set disassembly-flavor intel"
                },
                {
                    "text": "add-symbol-file \"${workspaceRoot}/loader/isofiles/boot/apps/hello.elf\" 0x10000000000"
                },
                //{
                //    "text": "add-symbol-file \"${workspaceRoot}/loader/isofiles/boot/apps/animation.elf\" 0x10000000000"
                //}
            ],
            "preLaunchTask": "qemu-gdb"
        }
    ]
}